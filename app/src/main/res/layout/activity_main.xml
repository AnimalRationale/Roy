<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pl.appnode.roy.MainActivity">

    <TextView
        android:id="@+id/text_battery_level_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/battery_level_description" />
    <RelativeLayout
        android:id="@+id/battery_level_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_battery_level_description"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="0dp">
        <ProgressBar
            android:id="@+id/battery_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            android:layout_centerInParent="true"
            android:background="@drawable/circular_progress_bar_background"
            android:progressDrawable="@drawable/circular_progress_bar"
            android:max="100"
            android:progress="100" />
        <TextView
            android:id="@+id/text_battery_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"
            android:text="@string/not_available" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/battery_status_icons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/battery_level_container"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="2dp">
        <ImageView
            android:id="@+id/icon_plugged_usb"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_device_usb"
            android:gravity="center_horizontal"
            android:padding="5dip"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/text_battery_plugged"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/battery_status_icons"
        android:layout_centerHorizontal="true"
        android:text="@string/not_available" />
    <TextView
        android:id="@+id/text_battery_charge_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_battery_plugged"
        android:layout_centerHorizontal="true"
        android:text="@string/not_available" />
    <TextView
        android:id="@+id/text_battery_level_check_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_battery_charge_status"
        android:layout_centerHorizontal="true"
        android:text="@string/not_available" />
    <Button
        android:id="@+id/button_battery_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_check_battery"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_battery_level_check_time"
        android:onClick="showBatteryLevelButton"/>
</RelativeLayout>
